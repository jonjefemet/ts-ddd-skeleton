#!/bin/bash

# Define ANSI color codes
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
MAGENTA='\033[0;35m'
NC='\033[0m'  # No Color

B1="${BLUE}[${NC}"
B2="${BLUE}]${NC}"


echo "\n\n ðŸš€ ${MAGENTA}Commit Format${NC}  |  ${YELLOW}\"[ type ]: [ subject ]\"${NC}\n"
