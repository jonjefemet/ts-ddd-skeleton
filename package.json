{
  "name": "skeleton",
  "version": "2.5.0",
  "description": "Serverless aws-nodejs-typescript template",
  "main": "serverless.ts",
  "scripts": {
    "format": "eslint '**/*.ts' --fix",
    "format-quiet": "eslint '**/*.ts' --fix --quiet",
    "test": "jest --coverage",
    "test-dev": "jest --onlyChanged",
    "prepare": "husky",
    "patch": "yarn version --patch",
    "minor": "yarn version --minor",
    "major": "yarn version --major",
    "release": "standard-version",
    "changelog": "conventional-changelog -i CHANGELOG.md -s -r 0",
    "dev:auth": "ts-node-dev -r tsconfig-paths/register src/apps/auth/start.ts"
  },
  "engines": {
    "node": ">=20.9.0"
  },
  "dependencies": {
    "@hono/node-server": "^1.13.7",
    "axios": "^1.7.4",
    "hono": "^4.6.16",
    "inversify": "^6.2.1",
    "joi": "^17.13.3",
    "reflect-metadata": "^0.2.2",
    "typeorm": "^0.3.20",
    "uuid": "^11.0.5"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.6.1",
    "@commitlint/config-conventional": "^19.6.0",
    "@eslint/js": "^9.17.0",
    "@faker-js/faker": "^9.3.0",
    "@types/jest": "^29.5.13",
    "@types/node": "^22.10.6",
    "@types/uuid": "10.0.0",
    "conventional-changelog-cli": "^5.0.0",
    "depcheck": "^1.4.7",
    "dotenv": "^16.0.3",
    "eslint": "^9.17.0",
    "globals": "^15.9.0",
    "husky": "^9.0.6",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.19.1"
  },
  "author": "Palace Resorts",
  "license": "MIT"
}